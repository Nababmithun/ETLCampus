<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    tools:context=".activity.SplashActivity">

    <ImageView
        android:layout_marginTop="230dp"
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/mlogo" />

    <TextView
        android:id="@+id/myTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="16dp"
        android:gravity="center"

        android:text="আপনার জেলা প্রশাসক"

        android:textColor="@color/swipe_7"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/myTxt"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="পরিকল্পনা ও নির্দেশনায় "
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <View
                    android:layout_width="133dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:background="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="সৈয়দ ফারহানা কাউনাইন"
                    android:textColor="@color/swipe_7"
                    android:textSize="14dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:text="জেলা প্রশাসক ও বিজ্ঞ ম্যাজিস্ট্রেট"
                    android:textColor="@color/swipe_6"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="জেলা প্রশাসকের কার্যালয়,নরসিংদী "
                    android:textColor="@color/text2_color"
                    android:textSize="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="কারিগরি সহায়তায়"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <View
                    android:layout_width="110dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:background="@color/black" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/iit_logo" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>