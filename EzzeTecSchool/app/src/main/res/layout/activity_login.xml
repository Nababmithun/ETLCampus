<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginActivity">




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/solaimanilipi"
            android:textStyle="bold"
            android:textSize="32dp"
            android:text=" প্রবেশ করুন "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_marginTop="65dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/linearLayout"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:elevation="4dp"
                app:cardCornerRadius="5dp"
                android:layout_height="410dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="outline">

                        <com.google.android.material.textfield.TextInputEditText
                            android:hint="ইমেইল  "
                            android:fontFamily="@font/solaimanilipi"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/black"
                            android:textColorHint="@android:color/black"
                            android:textColor="@android:color/black"
                            android:textSize="16dp"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            app:met_baseColor="@android:color/black"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="@android:color/black"
                            app:met_singleLineEllipsis="true"/>

                    </com.google.android.material.textfield.TextInputLayout>




                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"

                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="outline">

                        <com.google.android.material.textfield.TextInputEditText
                            android:hint="পাসওয়ার্ড   "
                            android:fontFamily="@font/solaimanilipi"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/black"
                            android:textColorHint="@android:color/black"
                            android:textColor="@android:color/black"
                            android:textSize="16dp"
                            android:inputType="textPassword"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            app:met_baseColor="@android:color/black"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="@android:color/black"
                            app:met_singleLineEllipsis="true"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <info.hoang8f.widget.FButton
                        android:onClick="homee"
                        android:layout_marginTop="49dp"
                        android:textSize="14dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:fontFamily="@font/solaimanilipi"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        android:text=" প্রবেশ করুন "
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        app:cornerRadius="3dp"
                        app:fButtonColor="@color/colorPrimary"
                        app:shadowEnabled="true"
                        app:shadowHeight="3dp" />



                    <TextView
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:fontFamily="@font/solaimanilipi"
                        android:textColor="#F41044"
                        android:layout_marginTop="@dimen/sp16"
                        android:text="অথবা"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>





                    <TextView
                        android:textSize="16dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/solaimanilipi"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="@dimen/sp16"
                        android:text="ব্যবহার করে সাইন আপ করুন"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/sp20"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="50dp"
                            android:layout_height="34dp"
                            android:src="@drawable/face">

                        </de.hdodenhof.circleimageview.CircleImageView>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="50dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/instagram">

                        </de.hdodenhof.circleimageview.CircleImageView>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="50dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/twittter">

                        </de.hdodenhof.circleimageview.CircleImageView>
                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>